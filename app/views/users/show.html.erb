<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<p class="text-left"><%= link_to "See More Stories", users_path, :class => "btn btn-default" %></p>
		</div>
		<div class="col-lg-4">
			<h4 class="text-center text-muted">Pushing Social</h4>
		</div>
		<div class="col-lg-4">
			 <p class="text-right"><%= link_to "Tell Your Story", new_user_path, :class => "btn btn-primary" %></p>
		</div>
	</div>
</div>
<div class="container">
	<div class="col-lg-12">
	<h1 class="lead text-center text-info"><%= @user.name %> | <%= @user.type %></h1>
	<p class="text-center lead">How I attracted my first 100 readers.</p>
	
	</div>
	<br>
</div>
<div class="container">
	<div class="row">
	<div class="col-lg-3">
		<p class="text-right"><%= image_tag @user.avatar.url(:medium) %></p>
		<p class="text-right text-info"><em><%= @user.nickname %></em></p>
		

		
	</div>


	<div class="col-lg-9">
		<div class="story">
			<%=simple_format h @user.story %>
		</div>
	</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<h4 class="text-right">Insight</h4>
			<p class="text-right"><small>Share the love</small></p>
		</div>
		<div class="col-lg-9">
			<div class="tweetable">
				<h4><em><%= @user.tweetable %></em></h4>
			</div>
			<br>
			<div class="well">
				<h4 class="text-muted text-info">Get All These Awesome Stories</h4>
				<p>We've gathered all of these stories into one easy to read (and stylish) PDF download
				</p>
					<%= form_tag url_for(:controller => 'users', :action => 'alltips', :id => @user.id), :method => 'get' do %>
					  <p><%= text_field_tag "account", "What is your email address?", :class => 'form-control' %></p>
					  <%= submit_tag "Get the stories", :class => 'btn btn-primary' %>
					<% end %>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<h4 class="text-right" style="vertical-align:middle">Build a Better Blog</h4>
			<p class="text-right"><small>We'll give you what you need</small></p>
		</div>
		<div class="col-lg-9">
			<div class="tweetable">
				<p>We've created smart and affordable ways to do more with your blog</p>
				<a href="http://www.pushingsocial.com/services" class="btn btn-success">Learn More</a>
				
				

			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<br>	
		<h5 class="text-center text-muted">Another Marketing Gadget for the Little Guy</h5>
		<h5 class="text-muted text-center">Inspired by <a href="http://www.howigotmyfirst3customers.com">Noah Kagen</a></h5>
	</div>
</div>